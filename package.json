{
    "name": "react-pokedex",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^13.0.0",
        "@testing-library/user-event": "^13.2.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "web-vitals": "^2.1.0"
    },
    "scripts": {
        "start": "yarn run tailwind:build && react-scripts start",
        "build": "yarn run tailwind:build && react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "tailwind:build": "npx tailwindcss -i ./src/styles/src.css -o ./src/styles/dist.css",
        "tailwind:watch": "npx tailwindcss -i ./src/styles/src.css -o ./src/styles/dist.css --watch",
        "dev": "concurrently \"yarn run tailwind:watch\" \"yarn start\""
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "autoprefixer": "^10.4.8",
        "concurrently": "^7.3.0",
        "postcss": "^8.4.16",
        "tailwindcss": "^3.1.8"
    }
}
